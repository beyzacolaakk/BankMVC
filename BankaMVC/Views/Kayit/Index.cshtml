@model BankaMVC.Models.ViewModels.KayitViewModel

@{
    ViewData["Title"] = "Kayıt Ol - Bankam Mobil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-wrapper">
        <div class="login-header">
            <div class="logo-container">
                <div class="logo-circle">
                    <span class="logo-text">B</span>
                </div>
            </div>
            <h1 class="app-title">Mersin Bank</h1>
            <p class="app-subtitle">Yeni Hesap Oluşturun</p>
        </div>

        <div class="login-form-container">
            @using (Html.BeginForm("Kayit", "Kayit", FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "validation-summary" })
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.AdSoyad, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="7" r="4" />
                                <path d="M5.5 21a7.5 7.5 0 0 1 13 0" />
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-input", @placeholder = "Ad Soyad", autocomplete = "new-name" })
                    </div>
                    @Html.ValidationMessageFor(m => m.AdSoyad, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16v16H4z" stroke="none" />
                                <polyline points="4,4 12,13 20,4" />
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-input", @placeholder = "E-posta adresi", autocomplete = "new-email" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Telefon, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2
                                         19.79 19.79 0 0 1-8.63-3.07
                                         19.5 19.5 0 0 1-6-6
                                         19.79 19.79 0 0 1-3.07-8.67
                                         A2 2 0 0 1 4.11 2h3
                                         a2 2 0 0 1 2 1.72
                                         12.84 12.84 0 0 0 .7 2.81
                                         2 2 0 0 1-.45 2.11L8.09 9.91
                                         a16 16 0 0 0 6 6
                                         l1.27-1.27a2 2 0 0 1 2.11-.45
                                         12.84 12.84 0 0 0 2.81.7
                                         A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.Telefon, new { @class = "form-input", @placeholder = "5XX XXX XX XX", @maxlength = "15", autocomplete = "new-telefon" })
                    </div>
                    <small class="form-help">Başında 0 olmadan 10 haneli telefon numaranızı giriniz</small>
                    @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Sifre, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <circle cx="12" cy="16" r="1"></circle>
                                <path d="m12 13 0 3"></path>
                                <path d="M8 11V7a4 4 0 0 1 8 0v4"></path>
                            </svg>
                        </span>
                        @Html.PasswordFor(m => m.Sifre, new { @class = "form-input", @placeholder = "Şifrenizi belirleyin", autocomplete = "new-password" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SecilenSubeId, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </span>
                        @Html.DropDownListFor(m => m.SecilenSubeId, new SelectList(Model.Subeler, "Id", "SubeAdi"), "-- Şube Seçiniz --", new { @class = "form-input" })
                    </div>
                    @Html.ValidationMessageFor(m => m.SecilenSubeId, "", new { @class = "field-validation-error" })
                </div>

                <button type="submit" class="login-button">
                    Kayıt Ol
                </button>

                <div class="register-link">
                    <p>
                        Zaten hesabınız var mı?
                        <a href="@Url.Action("Index", "Giris")">Giriş Yap</a>
                    </p>
                </div>
            }
        </div>

        <div class="footer-info">
            <p>7/24 Müşteri Hizmetleri: 0850 XXX XX XX</p>
            <p>&copy; 2024 Bankam. Tüm hakları saklıdır.</p>
        </div>
    </div>
</div>
