@model BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DashboardOzet

@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Admin Panel</h2>

<div class="dashboard-cards">
    <div class="dashboard-card">
        <div class="dashboard-card-header">
            <div class="dashboard-card-title">
                PENDING ACCOUNT REQUESTS
            </div>
            <div class="dashboard-card-icon bg-blue">
                <i class="fas fa-user-plus"></i>
            </div>
        </div>
        <div class="dashboard-card-value">@Model.BekleyenHesapIstekleri</div>
        <div class="dashboard-card-description">
            <a href="@Url.Action("Index", "HesapIstekleri")">
                <i class="fas fa-arrow-right"></i> View all requests
            </a>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="dashboard-card-header">
            <div class="dashboard-card-title">PENDING CARD REQUESTS</div>
            <div class="dashboard-card-icon bg-green">
                <i class="fas fa-credit-card"></i>
            </div>
        </div>
        <div class="dashboard-card-value">@Model.BekleyenKartIstekleri</div>
        <div class="dashboard-card-description">
            <a href="@Url.Action("Index", "KartIstekleri")">
                <i class="fas fa-arrow-right"></i>
                View all requests
            </a>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="dashboard-card-header">
            <div class="dashboard-card-title">
                OPEN SUPPORT REQUESTS
            </div>
            <div class="dashboard-card-icon bg-red">
                <i class="fas fa-headset"></i>
            </div>
        </div>
        <div class="dashboard-card-value">@Model.AcikDestekTalepleri</div>
        <div class="dashboard-card-description">
            <a href="@Url.Action("Index", "DestekTalepleri")">
                <i class="fas fa-arrow-right"></i>
                View all requests
            </a>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="dashboard-card-header">
            <div class="dashboard-card-title">
                PENDING LIMIT INCREASE
            </div>
            <div class="dashboard-card-icon bg-yellow">
                <i class="fas fa-arrow-up"></i>
            </div>
        </div>
        <div class="dashboard-card-value">@Model.BekleyenLimitArtirmaIstekleri</div>
        <div class="dashboard-card-description">
            <a href="@Url.Action("Index", "LimitArtirma")">
                <i class="fas fa-arrow-right"></i>
                View all requests
            </a>
        </div>
    </div>
</div>
<div class="card">
    <div id="girisLoglari">
        Loading...
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "/AdminPanel/LoginOlaylariHtml",
                type: "GET",
                success: function (data) {
                    console.log("Başarılı:", data);
                    $("#girisLoglari").html(data);
                },
                error: function (xhr, status, error) {
                    console.error("Hata:", status, error);
                    $("#girisLoglari").html("<p>Giriş logları yüklenirken hata oluştu.</p>");
                }
            });
        });
    </script>
}

