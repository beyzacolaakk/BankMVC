@model BankaMVC.Models.Somut.DestekTalebi
@{
    ViewData["Title"] = "Yeni Destek Talebi";
}

<link rel="stylesheet" href="~/css/destek.css" />

<div class="destek-container">
    <div class="destek-content">
        <header class="transfer-header">
            <div class="header-content">
                <a href="@Url.Action("index", "gostergepaneli")" class="back-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m12 19-7-7 7-7"></path>
                        <path d="M19 12H5"></path>
                    </svg>
                </a>
                <h1>
                    Support Center
                </h1>
            </div>
        </header>

        <!-- Sekmeler -->
        <div class="sekme-container">
            <div class="sekme-buttons">
                <a href="@Url.Action("Index")" class="sekme-btn">
                    <i class="fas fa-comments"></i>
                    My demands
                </a>
                <a href="@Url.Action("YeniTalep")" class="sekme-btn active">
                    <i class="fas fa-plus"></i>
                    New Demand
                </a>
            </div>
        </div>


        <div class="form-container">
            <div class="form-header">
                <h2>
                    <i class="fas fa-plus"></i>
                    New Support Request
                </h2>
            </div>

            <form asp-action="YeniTalep" method="post" class="talep-form">
                <div class="form-row">

                    <select id="kategori" name="Kategori" class="form-control kategori-select">
                        <option value="">Select Category</option>
                        <option value="Account Transaction">Account Transaction</option>
                        <option value="Card Transaction">Card Transaction</option>
                        <option value="Money Transfer">Money Transfer</option>
                        <option value="Mobile Application">Mobile Application</option>
                        <option value="Security">Security</option>
                        <option value="Other">Other</option>
                    </select>

                    <div class="form-group">
    
                        <input asp-for="Konu" class="form-control kategori-selecte" placeholder="
Write the Subject of the Request" required />
                        <span asp-validation-for="Konu" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Mesaj">
                        Message
                    </label>
                    <textarea asp-for="Mesaj" class="form-control" rows="6" placeholder="
Explain Your Problem in Detail..." required></textarea>
                    <span asp-validation-for="Mesaj" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Send Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/destek.js"></script>
}
