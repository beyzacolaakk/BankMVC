
@model BankaMVC.Models.Somut.BankaYonetimPaneli.Models.KartAcmaIstegi

@{
    ViewBag.Title = "Kart Açma İsteği Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Kart Açma İsteği Detayı</h2>

<div class="card">
    <div class="card-header">
        <div>İstek Detayı</div>
        <div>
            <span class="badge @(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Beklemede ? "badge-primary" :
                                Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Onaylandi ? "badge-success" : "badge-danger")">
                @Model.Durum
            </span>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Müşteri ID:</label>
                    <div class="form-control">@Model.MusteriId</div>
                </div>
                <div class="form-group">
                    <label class="form-label">Müşteri Adı:</label>
                    <div class="form-control">@Model.MusteriAdiSoyadi</div>
                </div>
                <div class="form-group">
                    <label class="form-label">
                        Card Type:
                    </label>
                    <div class="form-control">
                        @if (Model.KartTipi == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.KartTipi.Credit)
                        {
                            <span class="badge badge-info">Credit</span>
                        }
                        else
                        {
                            <span class="badge badge-primary">Bank</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Talep Edilen Limit:</label>
                    <div class="form-control">@(Model.KartTipi == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.KartTipi.Credit ? Model.TalepEdilenLimit.ToString("N2") + " ₺" : "-")</div>
                </div>
                <div class="form-group">
                    <label class="form-label">Başvuru Tarihi:</label>
                    <div class="form-control">@Model.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
      
            </div>
        </div>
        
        @if (Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Beklemede)
        {
            <hr />
            <div class="d-flex">
                <form method="post" action="@Url.Action("Onayla", new { id = Model.Id })">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Onayla
                    </button>
                </form>
                <form method="post" action="@Url.Action("Reddet", new { id = Model.Id })" class="ml-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Reddet
                    </button>
                </form>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Listeye Dön
    </a>
</div>
