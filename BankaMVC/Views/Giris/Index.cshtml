@model BankaMVC.Models.ViewModels.GirisViewModel
@{
    ViewData["Title"] = "Giriş Yap - Bankam Mobil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-wrapper">
        <div class="login-header">
            <div class="logo-container">
                <div class="logo-circle">
                    <span class="logo-text">B</span>
                </div>
            </div>
            <h1 class="app-title">Mersin Bank</h1>
            <p class="app-subtitle">Hesabınıza giriş yapın</p>
        </div>

        <div class="login-form-container">
            @using (Html.BeginForm("Giris", "Giris", FormMethod.Post, new { @class = "login-form" }))

            {
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "validation-summary" })
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.Telefon, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.Telefon, new
                            {
                                @class = "form-input",
                                @placeholder = "5XX XXX XX XX",
                                @id = "telefon-input",
                                @maxlength = "15"
                            })
                    </div>
                    <small class="form-help">Başında 0 olmadan 10 haneli telefon numaranızı giriniz</small>
                    @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "field-validation-error" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Sifre, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <circle cx="12" cy="16" r="1"></circle>
                                <path d="m12 13 0 3"></path>
                                <path d="M8 11V7a4 4 0 0 1 8 0v4"></path>
                            </svg>
                        </span>
                        @Html.PasswordFor(m => m.Sifre, new
                            {
                                @class = "form-input",
                                @placeholder = "Şifrenizi giriniz",
                                @id = "sifre-input"
                            })
                        <button type="button" class="password-toggle" id="password-toggle">
                            <svg id="eye-open" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            <svg id="eye-closed" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                <line x1="1" y1="1" x2="23" y2="23"></line>
                            </svg>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "field-validation-error" })
                </div>

           

                <button type="submit" class="login-button">
                    Giriş Yap
                </button>

                <div class="register-link">
                    <p>
                        Hesabınız yok mu?
                        <a href="@Url.Action("Index", "Kayit")">Hemen Başvurun</a>
                    </p>
                </div>
            }
        </div>

        <div class="footer-info">
            <p>7/24 Müşteri Hizmetleri: 0850 XXX XX XX</p>
            <p>&copy; 2024 Bankam. Tüm hakları saklıdır.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/giris.js"></script>
}