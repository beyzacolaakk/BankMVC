
@model IEnumerable<BankaMVC.Models.Somut.BankaYonetimPaneli.Models.LimitArtirmaIstegi>

@{
    ViewBag.Title = "Limit Artırma İstekleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Limit Artırma İstekleri</h2>

<div class="card">
    <div class="card-header">
        <div>Tüm İstekler</div>
        <div>
            <a href="#" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-filter"></i> Filtrele
            </a>
            <a href="#" class="btn btn-sm btn-outline-primary ml-2">
                <i class="fas fa-download"></i> Dışa Aktar
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Müşteri</th>
                        <th>Kart No</th>
                        <th>Mevcut Limit</th>
                        <th>Talep Edilen Limit</th>
                        <th>Başvuru Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.MusteriAdiSoyadi</td>
                            <td>@item.KartNo</td>
                            <td>@item.MevcutLimit.ToString("N2") ₺</td>
                            <td>@item.TalepEdilenLimit.ToString("N2") ₺</td>
                            <td>@item.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @switch (item.Durum)
                                {
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Beklemede:
                                        <span class="badge badge-primary">Beklemede</span>
                                        break;
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Onaylandi:
                                        <span class="badge badge-success">Onaylandı</span>
                                        break;
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Reddedildi:
                                        <span class="badge badge-danger">Reddedildi</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Detay", new { id = item.Id })" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                            </td>
                            <td>
                                <form asp-action="Sil" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
