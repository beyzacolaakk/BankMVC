
@model BankaMVC.Models.Somut.BankaYonetimPaneli.Models.HesapAcmaIstegi

@{
    ViewBag.Title = "Account Opening Request Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Account Opening Request Details</h2>

<div class="card">
    <div class="card-header">
        <div>
            Request Details
        </div>
        <div>
            <span class="badge @(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Rejected ? "badge-primary" :
                                Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Active ? "badge-success" : "badge-danger")">
                @Model.Durum
            </span>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Customer Name:</label>
                    <div class="form-control">@Model.MusteriAdi @Model.MusteriSoyadi</div>
                </div>
                <div class="form-group">
                    <label class="form-label">Account No:</label>
                    <div class="form-control">@Model.HesapNo</div>
                </div>
                <div class="form-group">
                    <label class="form-label">Phone:</label>
                    <div class="form-control">@Model.Telefon</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">E-Mail:</label>
                    <div class="form-control">@Model.Eposta</div>
                </div>
                <div class="form-group">
                    <label class="form-label">Application Date:</label>
                    <div class="form-control">@Model.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
            
            </div>
        </div>
        
        @if (Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Pending)
        {
            <hr />
            <div class="d-flex">
                <form method="post" action="@Url.Action("Onayla", new { id = Model.Id })">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Confirm
                    </button>
                </form>
                <form method="post" action="@Url.Action("Reddet", new { id = Model.Id })" class="ml-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Reject
                    </button>
                </form>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Return to List
    </a>
</div>
