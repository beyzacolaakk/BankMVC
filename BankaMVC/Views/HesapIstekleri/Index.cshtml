@model IEnumerable<BankaMVC.Models.Somut.BankaYonetimPaneli.Models.HesapAcmaIstegi>

@{
    ViewBag.Title = "Account Opening Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">
    Account Opening Requests
</h2>

<div class="card">
    <div class="card-header">
        <div>
            All Requests
        </div>
        <div>
            <a href="#" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-filter"></i> Filtrele
            </a>
            <a href="#" class="btn btn-sm btn-outline-primary ml-2">
                <i class="fas fa-download"></i> Dışa Aktar
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Account Number
                        </th>
                        <th>
                            Application Date
                        </th>
                        <th>Situation</th>
                        <th>
                            Transactions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.MusteriAdi @item.MusteriSoyadi</td>
                            <td>@item.HesapNo</td>
                            <td>@item.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @switch (item.Durum)
                                {
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Pending:
                                        <span class="badge badge-primary">Pending</span>
                                        break;
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Active:
                                        <span class="badge badge-success">Active</span>
                                        break;
                                    case BankaMVC.Models.Somut.BankaYonetimPaneli.Models.IstekDurumu.Rejected:
                                        <span class="badge badge-danger">Rejected</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Detay", new { id = item.Id })" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
