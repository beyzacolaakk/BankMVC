@{
    ViewData["Title"] = "İşlem Başarılı";
    Layout = "~/Views/Shared/_ParaIslemLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Header -->
            <div class="header-section">
                <a href="@Url.Action("Index")" class="back-btn">←</a>
                <h2>İşlem Başarılı</h2>
            </div>

            <!-- Content -->
            <div class="card">
                <div class="card-body text-center">
                    <!-- Success Icon -->
                    <div class="success-icon">
                        <div class="success-circle">
                            ✓
                        </div>
                    </div>

                    <!-- Success Message -->
                    <div class="success-message">
                        <h2>İşlem Tamamlandı!</h2>
                        <p>işleminiz başarıyla gerçekleştirildi.</p>
                    </div>


                    <!-- New Transaction Button -->
                    <a href="@Url.Action("Index")" class="submit-btn" style="margin-bottom: 10px;">Geri Dön</a>
                    <a href="@Url.Action("Index", "GostergePaneli")" class="submit-btn">Anasayfaya Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>