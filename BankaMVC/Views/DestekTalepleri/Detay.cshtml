
@model BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekTaleb

@{
    ViewBag.Title = "Destek Talebi Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Destek Talebi Detayı</h2>

<div class="card">
    <div class="card-header">
        <div>Talep Detayı</div>
        <div>
            <span class="badge @(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Açık ? "badge-primary" :
                                Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Islemde ? "badge-warning" :
                                Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Çözüldü ? "badge-success" : "badge-danger")">
                @Model.Durum
            </span>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Müşteri ID:</label>
                    <div class="form-control">@Model.MusteriId</div>
                </div>
               
                <div class="form-group">
                    <label class="form-label">Konu:</label>
                    <div class="form-control">@Model.Konu</div>
                </div>
      
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Talep Tarihi:</label>
                    <div class="form-control">@Model.TalepTarihi.ToString("dd.MM.yyyy HH:mm")</div>
                </div>

                <div class="form-group">
                    <label class="form-label">Müşteri Adı:</label>
                    <div class="form-control">@Model.MusteriAdiSoyadi</div>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <label class="form-label">Explanation:</label>
            <div class="form-control" style="min-height: 100px;">@Model.Aciklama</div>
        </div>
        
  
        
        <hr />
        
        <form method="post" action="@Url.Action("DurumGuncelle", new { id = Model.Id })">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Durum Güncelle:</label>
                        <select name="durum" class="form-control">
                            <option value="0" selected="@(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Açık)">Açık</option>
                            <option value="1" selected="@(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Islemde)">İşlemde</option>
                            <option value="2" selected="@(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Çözüldü)">Çözüldü</option>
                            <option value="3" selected="@(Model.Durum == BankaMVC.Models.Somut.BankaYonetimPaneli.Models.DestekDurumu.Kapatildi)">Kapatıldı</option>
                        </select>


                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">Yanıt:</label>
                <textarea name="yanit" class="form-control" rows="4">@Model.Yanit</textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Güncelle
            </button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Listeye Dön
    </a>
</div>
